<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="{twitterWidget.width}"
		 height="{twitterWidget.height}"
		 x="{twitterWidget.x}"
		 y="{twitterWidget.y}"
		 alpha="{twitterWidget.alpha}"
		 backgroundColor="{twitterWidget.bgColor}"
		 cornerRadius="{twitterWidget.cornerRadius}"
		 borderStyle="solid"
		 visible="{twitterWidget.isVisible}"
		 title="Twitter" 
		 xmlns:display="com.rwth.elearning.socialfeedreader.view.main.widget.twitter.display.*">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import com.rwth.elearning.socialfeedreader.vo.content.twitter.TwitterWidgetContentVO;
			import com.rwth.elearning.socialfeedreader.vo.style.widgets.TwitterWidgetVO;
			[Bindable]
			public var twitterWidget:TwitterWidgetVO;
			
			[Bindable]
			public var twitterContent:TwitterWidgetContentVO;
		]]>
	</fx:Script>
	
	<display:TwitterPostGetter/>
	
	<display:TwitterContentDisplayer
		content="{twitterContent}"
		width="100%"/>
		
	
</mx:Panel>
